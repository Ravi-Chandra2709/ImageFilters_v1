<header>
		<a href="/" class="logo"><i class="fas fa-images fa-2x"></i></a>
		<ul>
			<% if(!currentUser){ %>
				<li><a href="/login">login</a></li>
				<li><a href="/register">signup</a></li>
			<% } else{ %>
				<li><a href="/login">Hi, <%= currentUser.username %></a></li>
				<li><a href="/logout">logout</a></li>
			<% } %>
			<li><a href="/Greenscreen">Greenscreen</a></li>
		</ul>
</header>


