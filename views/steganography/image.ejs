<div class="cont" id="imageinimage">
		<h2>
			Image-in-Image
		</h2>
        <div class="">
                 <input class="ui primary button" type="file" name="pic" accept="image/*" id="fgfile" onchange="loadForegroundImage()"/>
				<input class="ui primary button" type="file" name="pic" accept="image/*" id="bgfile" onchange="loadBackgroundImage()"/>
				<button class="ui secondary button" onclick="HidenCombine()">Combine</button>
        </div>
        <div class="img-cont">
			  <div  class="img1">
				<h5>Cover Image</h5>
				<canvas id="fgcan" class="canvas"></canvas>
			  </div>

			  <div class="" id="encodedimg">
				<h5>Secret Image</h5>
				<canvas id="bgcan" class="canvas"></canvas>
			  </div>
        </div>
        <div class="img-cont">
				<div  class="img1">
				<h5>Combined Image</h5>
				<canvas id="ccan" class="canvas"></canvas>
				<button class="ui secondary button" onclick="download_image()">Download</button>
			  </div>

			  <div class="" id="encodedimg">
				<h5>Secret Image</h5>
				<canvas id="hcan" class="canvas"></canvas>
			  </div>
		</div>
		<div class="">
			<h5>To Extract the hidden image upload your <q>steg_image</q></h5>
		  <input class="ui secondary button" type="file" name="pic" accept="image/*" id="hfile" onchange="loadComImage()" />
		  <button class="ui secondary button" onclick="Hide()">Extract</button>
		</div>
</div>
